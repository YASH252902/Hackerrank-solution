#include <iostream>
using namespace std;

int saveThePrisoner(int n, int m, int s) {
    int result = (s + m - 2) % n + 1;
    return result;
}

int main() {
    int t; // number of test cases
    cin >> t;
    while (t--) {
        int n, m, s;
        cin >> n >> m >> s;
        cout << saveThePrisoner(n, m, s) << "\n";
    }
    return 0;
}
