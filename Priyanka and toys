#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;
    vector<int> weights(n);
    for (int i = 0; i < n; i++) {
        cin >> weights[i];
    }

    sort(weights.begin(), weights.end());

    int containers = 1;  // start with one container
    int container_min = weights[0];

    for (int i = 1; i < n; i++) {
        if (weights[i] - container_min > 4) {
            containers++;
            container_min = weights[i];
        }
    }

    cout << containers << "\n";

    return 0;
}
