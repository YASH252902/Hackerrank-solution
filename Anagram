#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;

    while (t--) {
        string s;
        cin >> s;

        int n = s.length();
        if (n % 2 == 1) {
            cout << -1 << "\n";
            continue;
        }

        string a = s.substr(0, n/2);
        string b = s.substr(n/2);

        vector<int> cntA(26, 0), cntB(26, 0);

        for (char c : a) cntA[c - 'a']++;
        for (char c : b) cntB[c - 'a']++;

        int changes = 0;

        for (int i = 0; i < 26; i++) {
            if (cntA[i] > cntB[i])
                changes += (cntA[i] - cntB[i]);
        }

        cout << changes << "\n";
    }

    return 0;
}
