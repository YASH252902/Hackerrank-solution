#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    
    int T;
    if (!(cin >> T)) return 0;
    while (T--) {
        int n, k;
        cin >> n >> k;
        vector<long long> a(n);
        for (int i = 0; i < n; ++i) cin >> a[i];

        
        vector<long long> freq(k, 0);
        freq[0] = 1; 
        
        long long prefix = 0;
        for (int i = 0; i < n; ++i) {
            prefix += a[i];
            int m = (int)(((prefix % k) + k) % k;
            ++freq[m];
        }

        long long ans = 0;
        for (int r = 0; r < k; ++r) {
            long long c = freq[r];
            ans += c * (c - 1) / 2; 
        }

        cout << ans << '\n';
    }

    return 0;
}
