#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    
    int n, k;
    cin >> n >> k;
    vector<int> arr(n);
    for (int i = 0; i < n; i++) cin >> arr[i];
    
    unordered_set<int> nums(arr.begin(), arr.end());
    int count = 0;

    for (int x : arr) {
        if (nums.find(x + k) != nums.end()) count++;
    }

    cout << count << "\n";
    return 0;
}
